{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "theme": "catppuccin",
  "autoupdate": "notify",
  "model": "github-copilot/gemini-3-flash-preview",
  "small_model": "github-copilot/gpt-5-mini",
  "provider": {
    "openrouter": {
      "options": {
        "api_key": "{env:OPENROUTER_API_KEY}"
      }
    }
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
    }
  }
}
